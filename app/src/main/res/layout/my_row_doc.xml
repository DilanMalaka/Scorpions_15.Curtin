<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">


            <TextView
                android:id="@+id/doc_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="70dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/doc_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Name"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/doc_id_text"
                app:layout_constraintTop_toTopOf="@+id/doc_id_text" />

            <TextView
                android:id="@+id/doc_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Phone No"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/doc_name_text"
                app:layout_constraintTop_toBottomOf="@+id/doc_name_text" />

            <TextView
                android:id="@+id/doc_work_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Working Hours"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/doc_phone_text"
                app:layout_constraintTop_toBottomOf="@+id/doc_phone_text" />

            <TextView
                android:id="@+id/doc_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Address"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/doc_work_text"
                app:layout_constraintTop_toBottomOf="@+id/doc_work_text" />

            <TextView
                android:id="@+id/doc_province_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="province"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/doc_address_text"
                app:layout_constraintTop_toBottomOf="@+id/doc_address_text" />

            <TextView
                android:id="@+id/doc_country_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="country"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/doc_province_text"
                app:layout_constraintTop_toBottomOf="@+id/doc_province_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>